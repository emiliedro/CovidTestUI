<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewPatients">

    <LinearLayout
        android:id="@+id/PatientNavigation"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="700dp"
        android:keepScreenOn="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonDoctorHome"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Home" />

            <Button
                android:id="@+id/buttonAddTestResults"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_weight="1000"
                android:text="Add Test Results" />

            <Button
                android:id="@+id/buttonPatients"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Patients" />

            <Button
                android:id="@+id/buttonDoctorUpcomingTests"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1000"
                android:text="Upcoming Tests" />

            <Button
                android:id="@+id/buttonNotifs"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="Notifs" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>